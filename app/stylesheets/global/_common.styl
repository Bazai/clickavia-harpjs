*
  global-reset()

h1, h2, h3
  font-family: "PFDinTextCondProThin", Tahoma, Arial, Verdana, sans-serif
  font-style: normal
  font-weight: normal

button, input, select, textarea
  color: #333333
  font-family: "Myriad Pro", Helvetica, Arial, Tahoma, sans-serif
  font-size: 14px
  outline: medium none

.brd_left
  position: absolute
  border-left: 1px solid #5C5C5C
  z-index: 10000

.brd_right
  position: absolute
  border-right: 1px solid #212121
  z-index: 10000


.button-new
  background-color: #4A4A4A
  border: 1px solid #3D3D3D
  border-radius: 3px 3px 3px 3px
  color: #FFFFFF
  cursor: pointer
  font-size: 14px
  font-weight: bold
  height: 41px
  line-height: 41px
  text-align: center
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.8)
  transition-duration: 0.25s
  transition-property: color, background-color, border-color

.button-new
  margin: 27px auto 30px
  width: 154px

.button-new.disabled, .button-new.busy
  border: 1px solid #CACACA
  color: #FFFFFF
  cursor: default
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4)

.button-new.disabled
  background: none repeat scroll 0 0 lightgrey


.page-wrap:before,
.page-wrap:after
  content: ""
  display: table
  clear: both

.page-wrap
  margin: 0 auto
  padding: 0 15px
  width: 928px
  .inner
    margin-left: -16px
    padding: 0 17px
    width: 924px

.main-picker
  min-height: 425px
  width: 608px
  z-index: 550
  div
    position: relative
  .month
    width: 304px
    thead
      text-align: left
      th
        padding-bottom: 14px
        padding-left: 12px
    td
      cursor: default
      padding-bottom: 6px
      transition-duration: 0.5s
      transition-property: opacity

      .wrapper
        color: #B3DB79
        cursor: default
        display: block
        padding-left: 12px
        position: relative
        text-decoration: none !important
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.3)
        transition-duration: 0.5s
        transition-property: color, text-shadow
    .point-wrapper .point
      bottom: -4px
      display: none
      height: 25px
      left: 6px
      line-height: 25px
      padding-right: 1px
      position: absolute
      text-align: center
      width: 25px
    td.right
      display: table-cell
      float: none
      .wrapper
        border-bottom-right-radius: 8px
        border-top-right-radius: 8px

    td.left
      display: table-cell
      float: none
      .wrapper
        border-bottom-left-radius: 8px
        border-top-left-radius: 8px

    table
      table-layout: fixed
      border-collapse: collapse
      width: 100%
    .caption
      background: none repeat scroll 0 0 #333333
      font-size: 18px
      line-height: 54px
      text-align: center
      text-shadow: 0 -1px #232323
    .table-wrapper
      padding: 20px
      get_common_sprite()
      background-position: 0 -1297px
  .points-hint
    color: #FFFFFF
    line-height: 18px
    text-align: center
  .shadow
    margin: 0 -8px -27px !important
    padding: 0 8px 27px !important
    get_common_sprite()
    background-position: 0 162px
  .points-0
    .points-hint
      color: #333333
      text-shadow: none
    .container .fields-line > .small-logo
      //TODO: replace with arrows
      //background-position: center 0
  .container
    background: none repeat scroll 0 0 #76B718
    border-radius: 10px 10px 10px 10px
    color: #FFFFFF
    margin-top: 16px
    text-shadow: 0 -1px #507C10
    z-index: 1050
    .clear-dates
      bottom: 10px
      cursor: pointer
      display: none
      font-size: 13px
      position: absolute
      right: 25px
      span
        cursor: pointer
        text-decoration: underline
        vertical-align: middle
      .button:after
        content: "ÔÄç"
        display: inline-block
        font-family: FontAwesome
        font-size: 11px
        font-style: normal
        font-weight: normal
        padding: 0 2px 0 1px
        text-decoration: none
    .progress-bar-title
      white-space: nowrap
    .month-slider.main-slider
      height: 252px
      line-height: 17px
      margin-top: 18px
      .slide-display
        margin: 0
      .left-nav-placeholder, .right-nav-placeholder
        background: none repeat scroll 0 0 #333333
        height: 54px
        position: absolute
        top: 0
        width: 65px
      .left-nav-placeholder
        left: 0
      .right-nav-placeholder
        right: 0
      .nav.enabled
        span.inner
          cursor: pointer
      .nav.enabled:hover
        background-color: #80C20A
      .nav
        background: none repeat scroll 0 0 #76B718
        border-radius: 18px 18px 18px 18px
        box-shadow: 0 -1px #232323
        height: 36px
        opacity: 0.5
        top: 9px
        width: 36px
      .nav.next
        right: 16px
        span.inner
          background-position: 16px -897px

      .nav.prev
        left: 16px
        span.inner
          background-position: 16px -861px
    .fields-line
      height: 72px
      position: relative
      .small-logo
        height: 50px
        margin: 0 auto
        top: 11px
        width: 50px
      //background will be replaced with double arrows, according ticket #61

      .text-field
        background-color: #598A12
        border-radius: 5px 5px 5px 5px
        box-shadow: 0 1px #476F0F inset, 0 -1px #85CE1B inset
        height: 36px
        position: absolute
        top: 18px
        width: 240px
        .wrapper
          padding: 8px
          position: relative
          set_placeholder_color: #FFFFFF, #B2C992
          input
            background: none repeat scroll 0 0 transparent
            border: medium none
            color: #FFFFFF
            font-size: 16px
            height: 20px
            position: relative
            line-height: 19px
            padding: 0
            width: 100%
      .text-field.from
        left: 16px
      .text-field.to
        right: 16px
  .dropdown_list
    position: relative
    div
      position: relative
    .dropdown-menu
      background: none repeat scroll 0 0 #87D21C
      border: 1px solid #67A015
      border-radius: 0 0 5px 5px
      overflow: hidden
      padding: 0
      position: absolute
      width: 238px !important
      color: #333333
      margin-top: 8px
      margin-left: -8px
      z-index: 10000
      .baron-container
        height: 100%
        overflow-x: hidden
        overflow-y: scroll
        li:first-child
          a
            border-top-color: #85CE1B
        li
          clear: left
          float: left
          padding: 0
          margin: 0
          width: 100%
          a:hover, a.hovered
            background-color: #76B718
            border-top: 1px solid #76B718
            border-bottom: 1px solid #76B718
            color: #2D4609
          a.disabled
            set_opacity: 50
          a
            border-bottom: 1px solid #70AE17
            border-radius: 0 0 0 0
            border-top: 1px solid #8DDB1D
            color: #2D4609
            cursor: pointer
            display: block
            line-height: 15px !important
            padding: 5px 6px !important
            position: relative
            text-shadow: 0 1px 0 rgba(255, 255, 255, 0.4)
            display: block
            line-height: 1.5
            padding: 0.2em 0.4em
            text-decoration: none
            .type
              background: none repeat scroll 0 0 rgba(0, 0, 0, 0)
              color: #FFFFFF
              display: inline-block
              font-size: 12px
              font-style: italic
              height: 15px
              opacity: 1
              padding: 5px 6px 5px 0
              position: absolute
              right: -1px
              text-align: right
              text-shadow: 0 -1px 0 #507C10
              top: 0
              width: 56px
.main-slider
  min-height: 24px
  padding: 0 !important
  position: relative
  .slide-display
    height: 100%
    margin: 0 40px
    overflow: hidden
    position: relative
    .slide-line
      position: absolute
      width: 10000px
      .item
        display: block
        float: left
    .dates-checker
      top: 20px
  .nav
    background: none repeat scroll 0 0 #76B718
    border-radius: 18px 18px 18px 18px
    box-shadow: 0 -1px #232323
    height: 36px
    opacity: 0.5
    top: 9px
    width: 36px

    display: block
    height: 100%
    position: absolute
    top: 0
    width: 40px
    span.inner
      get_common_sprite()
      cursor: default
      display: block
      height: 100%
      width: 100%
  .nav.enabled
    opacity: 1 !important

.progress-bar
  display: none
  left: 50%
  margin-left: -100px
  position: absolute
  width: 200px
  z-index: 100
  p.progress-bar-title
    color: #FFFFFF
    margin-bottom: 0
    text-align: center
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25)
    transition-duration: 0.5s
    transition-property: text-shadow
  div.progress-bar
    border-radius: 2px 2px 2px 2px
    box-shadow: 0 1px #212121 inset, 0 -1px #949494 inset
    height: 4px
    min-height: 4px
    width: 100%
    span
      background-color: #878787
      border-radius: 1px 0 0 1px
      box-shadow: -3px 0 1px white inset
      display: block
      height: 2px
      position: relative
      top: 1px
      width: 0
